<div class="container">
  <div class="d-flex search m-3">
    <form name="findOrders" class="form-floating align-items-center">
      <div class="row g-3">
        <div class="col-auto">
          <label for="inputPassword6" class="col-form-label">Поиск</label>
        </div>
        <div class="col-auto">
          <input type="text" name="name" class="form-control" aria-describedby="passwordHelpInline">
        </div>
      </div>
    </form>

    <a style="text-decoration:none;color:black"
        href="/orders/new"><button type="button" class="btn btn-light btn-client mx-3">Добавить заказ</button></a>

  </div>
  <div data-type="findOrdersByStatus" class="row m-4">
    <div class="d-flex col-sm">
      <button type="button" class="btn btn-outline-secondary">В работе</button>
    </div>
    <div class="d-flex col-sm">
      <button type="button" class="btn btn-outline-danger">В рекламации</button>
    </div>
    <div class="d-flex col-sm">
      <button type="button" class="btn btn-outline-success">Закрыт</button>
    </div>
  </div>

  <ul class="list-group">
    {{#each orders}}
    <li class="list-group-item ">
      <a href="/orders/{{this._id}}" style="text-decoration: none;">{{this.number}} {{this.title}} {{this.status}}</a>
    </li>
    {{/each}}
  </ul>
</div>

